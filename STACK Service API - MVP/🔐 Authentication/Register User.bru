meta {
  name: Register User
  type: http
  seq: 1
}

post {
  url: {{base_url}}/api/v1/auth/register
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

settings {
  encodeUrl: true
}

docs {
  Register a new user account with email and password. Sends verification code to email.
}

